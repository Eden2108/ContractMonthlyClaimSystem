@{
    ViewData["Title"] = "Login";
}
<!--This section enables a lecturer,coordinator or manager to sign into their account if it exists-->

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="width: 400px;">
        <div class="card-header text-center bg-primary text-white rounded-top-4"
             style="background: linear-gradient(90deg, #6a11cb, #9a33ff);">
            <h3 class="mb-0">Welcome Back</h3>
            <p class="mb-0 small">Sign in to access your account</p>
        </div>

        <!--Email-->
        <div class="card-body">
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label fw-bold">Email</label>
                    <input type="email" id="email" name="email" class="form-control form-control-lg rounded-3" placeholder="lecturer@example.com" required>
                </div>
                <!--ChatGPT consulted to correct structure-->
                <!--Role-->
                <div class="mb-3">
                    <label for="role" class="form-label fw-bold">Role</label>
                    <select id="role" name="role" class="form-select form-select-lg rounded-3" required>
                        <option value="">-- Select Role --</option>
                        <option value="Lecturer">Lecturer</option>
                        <option value="Coordinator">Program Coordinator</option>
                        <option value="Manager">Program Manager</option>
                    </select>
                </div>

                <!--Password-->
                <div class="mb-3">
                    <label for="password" class="form-label fw-bold">Password</label>
                    <input type="password" id="password" name="password" class="form-control form-control-lg rounded-3" placeholder="Enter your password" required>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 rounded-3">Sign In</button>

                <div class="d-flex justify-content-between mt-3">
                    <a href="#" class="small">Forgot password?</a>
                    <a asp-controller="Account" asp-action="Register" class="small">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>
