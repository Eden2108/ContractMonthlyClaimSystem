@{
    ViewData["Title"] = "Coordinator's Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Programme Coordinator's Dashboard</h1>
    <p class="text-muted">Review and approve claims submitted by lecturers.</p>

    <table class="table table-striped table-purple-aqua">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>CLM003</td>
                <td>Mr. Smith</td>
                <td>12</td>
                <td><span class="badge bg-warning">Pending</span></td>
                <td>
                    <button class="btn btn-success btn-sm">Approve</button>
                    <button class="btn btn-danger btn-sm">Reject</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>